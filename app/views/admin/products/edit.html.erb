<%= render 'layouts/errors',obj: @product %>
 		<div class="container">
 			<div class="row"><h1>商品編集</h1></div>
 			<div class="row">
				<div class="col-lg-4">
          <%= form_with(model: [:admin, @product], local: true) do |f| %>
					<%= attachment_image_tag @product, :image, :fill, 300, 300 %>
          <%= f.attachment_field :image %>
				</div>
			  <div class="col-lg-8">
          <dl>
						<dt>商品名</dt>
            <dd><%= f.text_field :name %></dd>
            <dt>商品説明</dt>
						<dd><%= f.text_area :description %></dd>
            <dt>ジャンル</dt>
						<dd><%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--" %></dd>
						<dt>税抜価格</dt>
						<dd><%= f.text_field :price %>円</dd>
						<dt>販売ステータス</dt>
						<dd><%= f.select :salling_status, options_for_select({ "販売中" => "販売中", "売切" => "売切"}) %></dd><!--  Product.salling_statuses.keys.map {|k| [I18n.t("enums.product.salling_status.#{k}"), k]} -->

					</dl>
          <%= f.submit "変更を保存", class: "btn btn-info" %>
          <% end %>
	      </div>
			</div>
		</div>
