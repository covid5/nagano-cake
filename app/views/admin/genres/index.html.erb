<h1>ジャンル一覧・追加</h1>

<!-- ジャンル入力フオーム -->
<%= form_with(model: [ :admin, @genre]) do |f| %>

    <%= f.label :ジャンル %>
    <%= f.text_field :name, class: "" %>

    <%= f.radio_button :disabled, :false %>
    <%= f.label :有効 %>
    <%= f.radio_button :disabled, :true %>
    <%= f.label :無効 %>
    <%= f.submit :追加 %>

<% end %>

<div class="col-xs-4">

    <table class="table table-inverse">
	    <thead>

	        <tr>
		        <th>ジャンル</th>
		        <th>状態</th>
		        <th colspan="3"></th>
	        </tr>
	    </thead>

	    <tbody>
	    	<!-- ジャンル一覧　-->
		    <% @genres.each do |genre| %>
		    <tr>
			    <td><%= genre.name %></td>
			    <td><%= genre.disabled ? '無効' : '有効' %></td>
			    <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn-sm btn-primary" %></td>
		    </tr>
		    <% end %>
	    </tbody>
    </table>
</div>

