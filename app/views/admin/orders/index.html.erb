<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-2">
<h2>注文履歴一覧</h2>

<table class="table">
	<thead class="thead-dark">
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
    	<% @orders.each do |order| %>
    	<tr>
    		<td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
    		<td><%= order.member.last_name order.member.first_name %></td>
    		<td><%= order.order_details.sum(:number) %></td>
    		<td><%= order.status %></td>
    	</tr>
    	<% end %>
    </tbody>
</table>
</div>
</div>
</div>

<%= paginate @orders %>
