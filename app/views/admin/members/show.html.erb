
<h3><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h3>

<table  class="table table-borderless table-noborder">
	<tr>
		<td>顧客ID</td>
		<td><%= @member.id %>  <%= @member.status %></td>
	</tr>
	<tr>
		<td>氏名</td>
		<td><%= @member.last_name %><%= @member.first_name %></td>
	</tr>
	<tr>
		<td>フリガナ</td>
		<td><%= @member.last_name_kana%><%= @member.first_name_kana %></td>
	</tr>
	<tr>
		<td>郵便番号</td>
		<td><%= @member.post_code %></td>
	</tr>
	<tr>
		<td>住所</td>
		<td><%= @member.address %></td>
	</tr>
	<tr>
		<td>電話番号</td>
		<td><%= @member.phone_number %></td>
	</tr>
	<tr>
		<td>メールアドレス</td>
		<td><%= @member.email %></td>
	</tr>
</table>
<table>
	<div class="actions row">
	<%= link_to '編集する',edit_admin_member_path(@member.id), class: 'btn btn-primary col-xs-1' %>

	<%= link_to '注文履歴一覧を見る' , class: 'btn btn-primary col-xs-12'  %>
</div>
	