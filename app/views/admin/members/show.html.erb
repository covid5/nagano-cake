<h3><%= @member.first_name %><%= @member.last_name %>さんの会員詳細</h3>

<table>
	<tr>
		<td>顧客ID</td>
		<td><%= @member.id %>  <%= @member.status %></td>
	</tr>
	<tr>
		<td>氏名</td>
		<td><%= @member.first_name %> <%= @member.last_name %></td>
	</tr>
	<tr>
		<td>フリガナ</td>
		<td><%= @member.first_name_kana%><%= @member.last_name_kana %></td>
	</tr>
	<tr>
		<td>郵便番号</td>
		<td><%= @member.post_code %>
	</tr>
	<tr>
		<td>住所</td>
		<td><%= @member.address %></td>
	</tr>
	<tr>
		<td>電話番号</td>
		<td><%= @member.phone_number %></td>
	</tr>
	<tr>
		<td>メールアドレス</td>
		<td><%= @member.email %></td>
	</tr>
	<br>
	<%= link_to '編集する',edit_admin_member_path(@member.id) %>
