
<div class="container">
<div class="col-md-10">
<div class="p-3 mb-2 bg-light text-dark">
<h3>会員一覧</h3>
</div>
<table class='table' >
	<thead class="thead-light">

<h3>会員一覧</h3>
<table class='table table-hover table-inverse table-bordered'>
	<thead>

		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<% @members.each do |member| %>
	<tr>
		<td><%= member.id %></td>
		<td>
			<%= link_to admin_member_path(member.id) do %>
			<%= member.last_name %><%= member.first_name %>
			<% end %>
			</td>
		<td><%= member.email %></td>
		<td><%= member.status %></td>
	</tr>
	<% end %>
</table>

</div>
</div>


<%= paginate @members, class: "pagination" %> <!--追加 -->

