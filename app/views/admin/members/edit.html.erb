<h3><%= @member.last_name %><%=@member.first_name %>さんの会員情報編集</h3>
<table class="table">
<%= form_for @member,url: admin_member_path ,data: {"turbolinks"=>false} do |f| %>

 <div class="form-group has-icon">
 	<tr>
 		<td>会員ID</td>
 		<td><%= @member.id %></td>
 	</tr>
	 <tr>
	 	<td>氏名</td>

	 	<td>
	 	<%= f.text_field :last_name %>
	 	<%= f.text_field :first_name %>

	 	</td>
	 	</tr>
	 	<tr>
	 	<td>フリガナ</td>
	 	<td><%= f.text_field :last_name_kana %>
	 		<%= f.text_field :first_name_kana %></td>
	 </tr>
	 <tr>
	 	<td>郵便番号</td>
	 	<td><%= f.text_field :post_code %></td>
	 </tr>
	 <tr>
	 	<td>住所</td>
	 	<td><%= f.text_field :address %></td>
	 </tr>
	 <tr>
	 	<td>電話番号</td>
	 	<td><%= f.text_field :phone_number %></td>
	 </tr>
	 <tr>
	 	<td>メールアドレス</td>
	 	<td><%= f.text_field :email %></td>
	 </tr>
	 <tr>
	 	<td>会員ステータス</td>
	 	<td>
	 		<div class="radio-inline">
	 			<label><%= f.radio_button :status, :有効, checked: "checked" %>有効</label>
	 		</div>
	 		<div class="radio-inline">
	 			<label><%= f.radio_button :status, :退会済み %>退会済み</label>
	 		</div>
  	    </td>
	</tr>
  </div>
</table>


	<div class="actions row">
		<%=f.submit'変更を保存する',class: 'btn btn-primary col-xs-12%' %>
	</div>
	<% end %>