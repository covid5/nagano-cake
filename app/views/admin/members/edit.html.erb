<h3><%= @member.first_name %><%=@member.last_name %>さんの会員情報編集</h3>
<table>
<%= form_for @member,url: admin_member_path do |f| %>
 <div class="form-group has-icon">
	 <tr>
	 	<td>氏名</td>
	 	<td><%= f.text_field :first_name %>
	 	<%= f.text_field :last_name %></td>
	 	</tr>
	 	<tr>
	 	<td>フリガナ</td>
	 	<td><%= f.text_field :first_name_kana %>
	 		<%= f.text_field :last_name_kana %>
	 	</td>
	 </tr>
	 <tr>
	 	<td>郵便番号</td>
	 	<td><%= f.text_field :post_code %></td>
	 </tr>
	 <tr>
	 	<td>住所</td>
	 	<td><%= f.text_field :address %></td>
	 </tr>
	 <tr>
	 	<td>電話番号</td>
	 	<td><%= f.text_field :phone_number %></td>
	 </tr>
	 <tr>
	 	<td>メールアドレス</td>
	 	<td><%= f.text_field :email %></td>
	 </tr>
	 <tr>
	 	<td>会員ステータス</td>
	 	<td>


  		<div class="radio-inline">
    	<label><%= f.radio_button :status, :有効, checked: "checked" %>有効</label>
    	
  		</div>
  		<div class="radio-inline">
    	<label><%= f.radio_button :status, :退会済み %>退会済み</label>
    	
  		</div>
  	</td>
	</tr>
</table>



	</div>
	<div class="actions row">
	<%=f.submit'変更を保存する',class: 'btn btn-primary col-xs-12%' %>
</div>
	<% end %>
