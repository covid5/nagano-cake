<h3>注文履歴一覧</h3>
<table class="table">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<% @orders.each do |order| %>
	<tr>
			<td><%= order.created_at %></td>
			<td><%= order.member.post_code %><br>
				<%= order.member.address %><br>
				<%= order.member.last_name %><%= order.member.first_name %></td>
				<% order.order_detail.each do |order_detail| %>

			<td><%= order_detail.product.name %>
			</td>
			<% end %>
			<td><%= order.total_amount %></td>
			<td><%= order.status %></td>
			<td><%= link_to "表示する" , member_order_path(order),class:'btn btn-default' %>
</td>
</tr>
</table>
			<% end %>

			