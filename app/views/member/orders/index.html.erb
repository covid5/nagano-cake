<div class="container">
<h2>注文履歴一覧</h2>
<table class="table">
	<thead class="thead-light">
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<% @orders.each do |order| %>
	<tr>
		<td><%= order.created_at.strftime('%Y/%m/%d ') %></td>
		<td><%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.address_name %></td>
				<td><% order.order_detail.each do |order_detail| %>
					<%= order_detail.product.name %></br>
					<% end %>
				</td>
				<td><%= order.total_amount %></td>
				<td><%= order.status %></td>
				<td><%= link_to "表示する" , member_order_path(order),class:'btn btn-default' %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= paginate @orders %>
	</div>