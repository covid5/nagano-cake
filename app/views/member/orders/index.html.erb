<h3>注文履歴一覧</h3>
<table>
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<% @order.each do |order| %>
	<tr>
			<td><%= order.created_at %></td>
			<td><%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.address_name %></td>
			
			<td><%= order.total_amount %></td>
			<td><%= order.status %></td>
			<td><%= link_to "表示する" , member_order_path(order),class:'btn btn-default' %></td>

			<% end %>
    </tr>
</table>
