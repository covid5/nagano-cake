<h3>注文履歴一覧</h3>
<table>
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<% @order.each do |order| %>
	<tr>
		<td>
			<tr><%= order.created_at %></tr>
			<tr><%= order.postal_code %><br>
				<%= order.address %><br>
				<%= member.first_name %> <%= member.last_name %></tr>
			<tr><%= product.name %></tr>
			<tr><%= order.total_amount %></tr>
			<tr><%= order.status %></tr>
			<tr><%= link_to "表示する" , order_path(order),class:'btn btn-default' %>

			<% end %>
