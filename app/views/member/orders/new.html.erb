<div class="col-xs-9 col-xs-offset-1">
<h2>注文情報入力</h1>

<%= form_with url: { action: :confirm }, local: true do |f| %>

<h3>支払方法</h3>
<div class="field">
    <div class="form-group">
        <label><%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %> クレジットカード</label>
    </div>
    <div class="form-group">
        <label><%= f.radio_button :payment_method, :銀行振込 %> 銀行振込</label>
    </div>
</div>

<h3>お届け先</h3>
<div class="field">
    <div class="form-group">
        <label><%= f.radio_button :address_option, 0, checked: "checked" %> ご自身の住所</label><br />
        <%= current_member.full_address %><br>
        <%= current_member.last_name %>
    </div>
    <div class="form-group">
        <label><%= f.radio_button :address_option, 1 %> 登録済住所から選択</label><br />
        <%= f.collection_select :select_address, @shipping_addresses, :id, :full_address %>
    </div>
    
    <div class="form-group">
        <label><%= f.radio_button :address_option, 2 %> 新しいお届け先</label><br />

        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code %><br>
        <%= f.label :住所 %>
        <%= f.text_field :address %><br>
        <%= f.label :宛名 %>
        <%= f.text_field :address_name %><br>
    </div>
</div>

<%= f.submit "確認画面へ進む", class: "btn btn-success center-block btn-lg" %>

<% end %>
</div>