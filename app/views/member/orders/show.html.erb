<div class="container">
<h2>注文履歴詳細</h2>
<div class="row">
<div class="col-xs-6 col-xs-offset-1">
	<table class="table">
		<caption align="left">1注文情報</caption>
		<tr>
			<td>注文日</td>
			<td><%= @order.created_at.strftime('%Y/%m/%d ') %></td>
		</tr>
		<tr>
			<td>配送先</td>
			<td><%= @order.member.post_code %><br>
                <%= @order.member.address %><br>
                <%= @order.member.last_name %>
                <%= @order.member.first_name %>
			 </td>
		</tr>
		<tr>
			<td>支払方法</td>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<td>ステータス</td>
			<td><%= @order.status %></td>
		</tr>
	</table>
</div>
<div class="col-xs-3">
	<table class="table">
		<caption align="left">2請求情報</caption>
		<tr>
			<td>商品合計</td>
			<td><%= @order.total_amount - @order.postage%></td>
		</tr>
		<tr>
			<td>配送料</td>
			<td><%= @order.postage %></td>
		</tr>
		<tr>
			<td>ご請求額</td>
			<td><%=  @order.total_amount %></td>
		</tr>
	</table>
</div>
	<div class="col-xs-10 col-xs-offset-1">
	<table class="table">
		<caption align="left">注文内容</caption>
		<thead>
		<tr>
			<th>商品</th>
			<th>単価（税込み）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
	<% @sum = 0 %>
	<% @order_details.each do |order_detail| %>
		<tr>
			<td><%= order_detail.product.name %></td>
			<td><%= order_detail.taxed_price %></td>
			<td><%= order_detail.number %> </td>
			<td><%= order_detail.taxed_price * order_detail.number %>
				<% @sum += order_detail.taxed_price * order_detail.number %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
</div>
</div>