<h2>注文履歴詳細</h2>

<p class="information">注文情報</p>
	<table class="table">
		<tr>
			<td>注文日</td>
			<td><%= @order.created_at %></td>
		</tr>
		<tr>
			<td>配送先</td>
			<td><%= @order.member.post_code %><br>
                <%= @order.member.address %><br>
                <%= @order.member.last_name %>
                <%= @order.member.first_name %>
			 </td>
		</tr>
		<tr>
			<td>支払方法</td>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<td>ステータス</td>
			<td><%= @order.status %></td>
		</tr>
	</table>
	<p class="info">請求情報</p>
	<table class="table">
		<tr>
			<td>商品合計</td>
			<td><%= @order.total_amount %></td>
		</tr>
		<tr>
			<td>配送料</td>
			<td><%= @order.postage %></td>
		</tr>
		<tr>
			<td>ご請求額</td>
			<td><%= @order.total_amount + @order.postage %></td>
		</tr>

	</table>
	<p class="order">注文内容</p>
	<table class="table">
		<thead>
		<tr>
			<th>商品</th>
			<th>単価（税込み）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
	<% @order_details.each do |order_detail| %>
		<tr>
			<td><%= order_detail.product.name %></td>
			<td></td>
			<td><%= order_detail.number %> </td>

			<td>
			</td>
		</tr>
		<% end %>
	