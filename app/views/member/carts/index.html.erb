<h2>ショッピングカート</h2>

<div class="col-xs-2 col-xs-offset-9">

  <%= link_to "カートを空にする", member_empty_item_path(@cart_products), method: :delete, class: "btn btn-danger" %>
</div>

<div class="col-xs-9 col-xs-offset-1">
    <table class="table table-bordered">
	    <thead>
	    	<tr>
			    <th>商品名</th>
			    <th>単価（税込み）</th>
			    <th>数量</th>
			    <th>小計</th>
			    <th colspan="3"></th>
		    </tr>
	    </thead>
	    <tbody>
	    	<% @cart_products.each do |cart| %>
	    	  <%= form_for cart, url: member_cart_path(cart) do |f| %>

	    	<tr>
		    	<th><%= cart.product.name %></th>
		    	<td><%= cart.tax_price.floor %></td>
		    	<td>
				  <%= f.text_field :number, :size => 3 %>
				  <%= f.submit "変更する" %>
				  <% end %>
				 </td>
				 <td>￥ <%= cart.sum_price.floor %></td>
		    	<td><%= link_to "削除する", member_cart_path(cart), method: :delete %></td>
	    	</tr>
	    	<% end %>
	    </tbody>
    </table>
</div>

<div class="col-xs-3 col-xs-offset-1">
    <%= link_to "買い物を続ける", member_products_path, class: "btn btn-info" %>
</div>
<div class="col-xs-3 col-xs-offset-3">
<table class="table table-bordered table-striped">
	  <tr>
	         <th>合計金額</th>
    		 <td>￥ <%= @cart.total_price.floor %></td>
      </tr>
</table>
</div>

<div class="col-xs-4 col-xs-offset-4">
    <%= link_to "情報入力に進む", members_about_path, class: "btn btn-success center-block btn-lg" %>
</div>



