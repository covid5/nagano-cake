<%= form_with(model: [:member, shipping_address])  do |f| %>
  <div class="form-group input-group">
    <%= f.label "郵便番号(ハイフンなし)", class: 'input-group-addon' %>
    <%= f.text_field :post_code, class: 'col-xs-2 shipping_address_post_code' %>
  </div>

  <div class="form-group input-group">
    <%= f.label :住所, class: 'input-group-addon' %>
    <%= f.text_field :address, class: 'col-xs-9 shipping_address_address'%>
  </div>

  <div class="form-group input-group">
    <%= f.label :宛名, class: 'input-group-addon' %>
    <%= f.text_field :address_name, class: 'col-xs-3 shipping_address_address_name'%>
  </div>

  <div class="actions row">
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>
