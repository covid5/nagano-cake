<div class="col-xs-8 col-xs-offset-1">
<%= render 'layouts/errors',obj: @shipping_address %>
<h1>配送先登録/一覧</h1>

<%= render 'form', shipping_address: @shipping_address %>

</div>

<div class="col-xs-8 col-xs-offset-1">

<div style="margin-top: 10px">
    <table class='table table-hover table-inverse table-bordered'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipping_addresses.each do |sa| %>
      <tr>
        <td><%= sa.post_code %></td>
        <td><%= sa.address %></td>
        <td><%= sa.address_name %></td>
        <td>
          	<%= link_to '編集する', edit_member_shipping_address_path(sa), class: "btn-sm btn-success edit_shipping_address_#{@shipping_address.id}" %>
            <%= link_to '削除する', member_shipping_address_path(sa), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger destroy_shipping_address_#{@shipping_address.id}"%>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>